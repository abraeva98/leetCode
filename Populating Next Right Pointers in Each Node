// O(N) - time, space

var connect = function(root) {
    if (root === null) return null;
    let queue = [root];
    while (queue.length > 0) {
        let next = [];
        while (queue.length > 0) {
            let node = queue.shift();
            node.next = queue[0] || null;
            if (node.left) {
                next.push(node.left);
                next.push(node.right);
            }
        }
       queue = next;
    }
    return root;
};
