// O(N) time, O(logN) space

var triangleNumber = function(nums) {
    nums.sort((a, b) => a - b);
    let triangles = 0;
    for (let i = 0; i < nums.length - 2; i ++) {
         let k = i + 2;
         for (let j = i + 1; j < nums.length - 1 && nums[i] !== 0; j ++) {
             while (k < nums.length && nums[i] + nums[j] > nums[k]) {
                 k ++; 
                 triangles += k - j - 1;
             }
         }
    }
    return triangles; 
};
